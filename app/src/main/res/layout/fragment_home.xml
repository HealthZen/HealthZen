<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilebkg"
    tools:context="com.example.ProfileFragment">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="monospace"
        android:text="HealthZen"
        android:textColor="@color/brown"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/white_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName">

            <Button
                android:id="@+id/newsButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/lightgreen"
                android:text="News"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Keep updated with the current health news"
                android:textColor="@color/brown"
                android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:alpha="0.5"
            android:background="@color/lightgreen" />

            <Button
                android:id="@+id/calendarButton"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/lightgreen"
                android:text="Calendar"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Manage your schedule seamlessly"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:alpha="0.5"
            android:background="@color/lightgreen" />

            <Button
                android:id="@+id/stressReliefButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/lightgreen"
                android:text="Relaxing Music"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                app:cornerRadius="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Relax your mind by listening to calming music."
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:alpha="0.5"
            android:background="@color/lightgreen" />


            <Button
                android:id="@+id/meditationButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/lightgreen"
                android:text="Meditation"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                app:cornerRadius="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Cope with stress by following meditation videos"
                android:textColor="@color/brown"
                android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:alpha="0.5"
            android:background="@color/lightgreen" />

            <Button
                android:id="@+id/educationButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/lightgreen"
                android:text="Education"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                app:cornerRadius="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Learn from instructional videos"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:alpha="0.5"
            android:background="@color/lightgreen" />

            <Button
                android:id="@+id/chatButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/lightgreen"
                android:text="Chat"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                app:cornerRadius="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Engage with real-time chat and conversations"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="10sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:text="Emporwering Healthcare Professionals for a Healthier Workforce"
        android:textColor="@color/brown"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
