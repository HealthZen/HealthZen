<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewPostTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPostContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPostTitle"
        android:layout_marginTop="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewPoster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPostContent"
        android:layout_marginTop="8dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/deletePostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPoster"
        android:layout_marginTop="16dp"
        android:text="Delete"
        android:layout_alignParentStart="true"
        android:onClick="onDeleteButtonClicked" />

    <Button
        android:id="@+id/editPostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPoster"
        android:layout_marginTop="16dp"
        android:text="Edit"
        android:layout_alignParentEnd="true"
        android:onClick="onEditButtonClicked" />

</RelativeLayout>
