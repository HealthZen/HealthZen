<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilebkg"
    tools:context="com.example.SettingsFragment">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="monospace"
        android:text="Community"
        android:textColor="@color/brown"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/white_background"
        android:gravity="center"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_marginTop="7dp"
            android:orientation="vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/CommunityButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:backgroundTint="@color/lightgreen"
                android:text="Community"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Explore the latest updates from community"
                android:textColor="@color/brown"
                android:textSize="15sp" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/AddPostButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:backgroundTint="@color/lightgreen"
                android:text="AddPost"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Share thoughts and updates with community"
                android:textColor="@color/brown"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/MyPostsButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:backgroundTint="@color/lightgreen"
                android:text="MyPosts"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="View and manage my own posts"
                android:textColor="@color/brown"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/favoritesButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:backgroundTint="@color/lightgreen"
                android:text="My Favorites"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Stay informed with the latest notifications"
                android:textColor="@color/brown"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/NotificationButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:backgroundTint="@color/lightgreen"
                android:text="Notification"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Stay informed with the latest notifications"
                android:textColor="@color/brown"
                android:textSize="15sp" />

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="monospace"
        android:text="Bringing out the best in you"
        android:textColor="@color/brown"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>



