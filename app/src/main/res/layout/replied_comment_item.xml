<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints"

                    >

                    <TextView
                        android:id="@+id/repliedAuthorTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="repliedAuthor"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/repliedTimestampTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="repliedTimestampTextView"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/repliedContentTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="repliedContentTextView"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints"

                    >

                    <ImageView
                        android:id="@+id/deleteReplyview"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/baseline_delete_outline_24"
                        tools:ignore="ContentDescription" />
