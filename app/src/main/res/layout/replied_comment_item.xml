<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    tools:ignore="MissingConstraints"

                    >

                    <TextView
                        android:id="@+id/repliedAuthorTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="repliedAuthor"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/repliedTimestampTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="repliedTimestampTextView"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/repliedContentTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="repliedContentTextView"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints"
                    android:layout_marginLeft="25dp"

                    >

                    <ImageView
                        android:id="@+id/deleteReplyview"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/baseline_delete_outline_24"
                        tools:ignore="ContentDescription" />



                    <ImageView
                        android:id="@+id/replycommentimage"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/baseline_comment_24"
                        tools:ignore="ContentDescription" />





                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>




